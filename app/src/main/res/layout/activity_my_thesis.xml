<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyThesisActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#4DFBFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/toolbarImageButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/profileimage_foreground"
            tools:layout_editor_absoluteX="16dp" />


        <TextView
            android:id="@+id/toolbartextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="iu"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/meineAbschlussarbeitTopictextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abschlussarbeit"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/meineAbschlussarbeitTopictextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titel Ihrer Abschlussarbeit"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/titelMyThesiseditTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="B-Daten"
            android:textSize="24sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Ihres Betreuers"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/supervisorMyThesisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/titlezustandMyThesisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zustand der Abschlussarbeit"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/zustandMyThesisSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="24sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/titlezweitgutachterMyThesisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zweitgutachter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/zweitgutachterMyThesisSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="24sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/titlestudentMyThesisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/studentMyThesisTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:enabled="false"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/titlefaelligkeitsdatumMyThesisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FÃ¤lligkeitsdatum"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/faelligkeitsdatumMyThesisTextEdit"
            android:hint="B-Daten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/titlerechnungssatusMyThesisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rechnungsstatus"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/rechnungsstatusMyThesisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nicht gestellt"
            android:textSize="24sp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/myThesisbuttonRechnungsstellung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechnungsstellung"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4DFBFF"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/myThesisbuttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speichern"
                android:backgroundTint="#4DFBFF"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>