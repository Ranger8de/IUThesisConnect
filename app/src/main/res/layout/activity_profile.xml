<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ProfileActivity">

        <ImageView
            android:id="@+id/profileImageViewHeader"
            android:contentDescription="profile header image showing a black board"
            android:layout_width="0dp"
            android:layout_height="270dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/black_board" />

        <ImageView
            android:id="@+id/profileImageViewImage"
            android:contentDescription="profile header image showing profile picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile_male" />

        <TextView
            android:id="@+id/profileTextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Hans Clarin"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImageViewImage" />

        <TextView
            android:id="@+id/profileTextViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="hans.clarin@iu.org"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileTextViewName" />

        <ImageButton
            android:id="@+id/profileImageViewAvailableStatus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/flag_green"
            app:layout_constraintStart_toStartOf="@id/profileImageViewHeader"
            app:layout_constraintTop_toBottomOf="@+id/profileTextViewEmail" />

        <TextView
            android:id="@+id/profileTextViewAvailableStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="15dp"
            android:text="@string/availabilityStatus_free"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/profileImageViewAvailableStatus"
            app:layout_constraintStart_toEndOf="@+id/profileImageViewAvailableStatus" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImageViewHeader"
            android:fillViewport="true"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profileImageViewHeader">

            <EditText
                android:id="@+id/biographyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:gravity="top"
                android:hint="Geben Sie Ihre Biografie ein"
                android:inputType="textMultiLine"
                android:minHeight="100dp"
                android:overScrollMode="always"
                android:scrollbars="vertical" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>